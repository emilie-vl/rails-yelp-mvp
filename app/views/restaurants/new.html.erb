<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center text-primary mb-4">Create a Restaurant</h2>
      <%= simple_form_for @restaurant, html: { class: 'shadow p-4 rounded bg-light' } do |f| %>
        <div class="mb-3">
          <%= f.input :name, input_html: { class: 'form-control', placeholder: 'Enter restaurant name' }, label_html: { class: 'form-label' } %>
        </div>
        <div class="mb-3">
          <%= f.input :address, input_html: { class: 'form-control', placeholder: 'Enter restaurant address' }, label_html: { class: 'form-label' } %>
        </div>
        <div class="mb-3">
          <%= f.input :phone_number, input_html: { class: 'form-control', placeholder: 'Enter phone number' }, label_html: { class: 'form-label' } %>
        </div>
        <div class="mb-3">
          <%= f.input :category, collection: Restaurant::CATEGORIES, input_html: { class: 'form-select' }, label_html: { class: 'form-label' } %>
        </div>
        <div class="d-grid">
          <%= f.submit 'Save Restaurant', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
