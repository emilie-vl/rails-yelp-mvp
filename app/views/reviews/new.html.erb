<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center text-success mb-4">Add a Review</h2>
      <%= simple_form_for [@restaurant, @review], html: { class: 'shadow p-4 rounded bg-light' } do |f| %>
        <div class="mb-3">
          <%= f.input :content, input_html: { class: 'form-control', placeholder: 'Write your review here...' }, label_html: { class: 'form-label' } %>
        </div>
        <div class="mb-3">
          <%= f.input :rating, collection: (1..5), input_html: { class: 'form-select' }, label_html: { class: 'form-label' } %>
        </div>
        <div class="d-grid">
          <%= f.submit 'Submit Review', class: 'btn btn-success btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
